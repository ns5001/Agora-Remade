<!DOCTYPE html>
<html>
  <head>
    <title>Agora</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <nav>
    <% if user_signed_in? %>
      <%= link_to "My Portfolio", user_lists_path(current_user) %>
      <%= link_to "Log Out", destroy_user_session_path(current_user) %>
    <% else %>
      <a class="page-scroll" data-toggle="modal" href="#aboutModal">Sign Up</a><br>
      <a class="page-scroll" data-toggle="modal" href="#aboutModal2">Sign In</a>
    <% end %>
  </nav>

  <body>
    <%= yield %>
  </body>
</html>
